<div class="grid-container byu-prose" style="padding-top: 2em; padding-bottom: 2em;">
<form class="byu-form">
    <fieldset class="byu-fieldset">
        <legend class="byu-legend">Name</legend>
        <label class="byu-label" for="title">Title <span class="byu-hint">(optional)</span></label>
        <input class="byu-input byu-input--small" id="title" name="title" type="text">

        <label class="byu-label" for="first-name">First name</label>
        <input class="byu-input" id="first-name" name="first-name" type="text" required aria-required="true">

        <label class="byu-label" for="middle-name">Middle name <span class="byu-hint">(optional)</span></label>
        <input class="byu-input" id="middle-name" name="middle-name" type="text">

        <label class="byu-label" for="last-name">Last name</label>
        <input class="byu-input" id="last-name" name="last-name" type="text" required aria-required="true">
    </fieldset>
</form>
</div>