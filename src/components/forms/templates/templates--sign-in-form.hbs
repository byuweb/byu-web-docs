<div class="grid-container byu-prose" style="padding-top: 2em; padding-bottom: 2em;">
    <form class="byu-form">
    <fieldset class="byu-fieldset">
        <legend class="byu-legend">Sign in</legend>
        <span>or <a href="javascript:void(0);">create an account</a></span>

        <label class="byu-label" for="username">Username or email address</label>
        <input class="byu-input" id="username" name="username" type="text" autocapitalize="off" autocorrect="off">

        <label class="byu-label" for="password-sign-in">Password</label>
        <input class="byu-input" id="password-sign-in" name="password" type="password">
        <p class="byu-form__note">
            <a title="Show password" href="javascript:void(0);" class="byu-show-password" aria-controls="password-sign-in">Show password</a>
        </p>

        <input class="byu-button" type="submit" value="Sign in">
        <p><a href="javascript:void(0);" title="Forgot username">
      Forgot username?</a></p>
        <p><a href="javascript:void(0);" title="Forgot password">
      Forgot password?</a></p>
    </fieldset>
</form>

</div>